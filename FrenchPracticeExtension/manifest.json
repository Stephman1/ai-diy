{
    "manifest_version": 3,
    "name": "French Practice Extension",
    "version": "1.0",
    "description": "Learn French by reading news and listening to videos.",
    "permissions": [
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "french-flag.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }
}
